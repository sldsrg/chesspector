{
	"env": {
		"chai": true,
		"mocha": true
	},  
	"extends": [
		"tslint:recommended"
  ],
  "rules": {
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"curly": false,
		"class-name": true,
		"quotemark": [true, "single"],
		"semicolon": [ true, "never"],
		"triple-equals": true,
		"no-console": false,
		"object-literal-sort-keys": false,
		"ordered-imports": false
	}
}