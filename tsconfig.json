{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es2015",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./dist/lib",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "typedocOptions": {
    "mode": "file",
    "out": "dist/docs",
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true,
    "target": "ES2015"
  },
  "include": [
    "src/**/*"
  ]
}